<div class="article">
  <h3><%= link_to article.title, article.url %></h3>

  <%= partial 'layouts/commons/meta', :locals => { :article => article } %>

  <div class="content">
    <%= article.body %>
  </div>

  <div class="meta">
    <%= partial 'layouts/commons/tags', :locals => { :article => article, :section => section } %>
  </div>

  <div class="btn-group">
    <%= link_to 'Подробнее', article.url, :class => 'btn btn-default btn-sm' %>
  </div>
</div>
